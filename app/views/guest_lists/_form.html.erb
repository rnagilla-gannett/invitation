<%= simple_form_for @guest_list, :html => { :class => 'form-horizontal' } do |f| %>
 <div class="row-fluid">
 	<div class="span3">
 		<%= f.input :name, input_html:{:style => "width: 200px"} %>	
 	</div>
 	<div class="span3">
 		<%= f.input :email, input_html:{:style => "width: 200px"} %>
 	</div>
  	<%= f.input :adults, collection: 1..10 , input_html:{:style => "width: 50px"}%>
  	<%= f.input :children, collection: 0..10, input_html:{:style => "width: 50px"} %>
  	<%= f.input :comment%>
 </div>
  <div class="form-actions">
    <%= f.button :submit, "RSVP", :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                guest_lists_path, :class => 'btn' %>
  </div>
<% end %>
