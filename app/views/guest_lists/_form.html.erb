<%= simple_form_for @guest_list, :html => { :class => 'form-inline' } do |f| %>
  <div class="row-fluid">
 	<div class="span2">
 	  <%= f.input :name, input_html:{:style => "width: 200px"}, placeholder: "Name" %>	
 	</div>
  </div>
  &nbsp;
  <div class="row-fluid">
  	<div class="span2">
    	<%= f.input :email, input_html:{:style => "width: 200px"}, placeholder: "Email id.." %>
  	</div>
  </div>
  &nbsp;
  <div class="row">
  	<div class="span2">
	  	<div class="span1">
	   		<%= f.input :adults, collection: 0..10 , input_html:{:style => "width: 50px"}, selected: 0%>
	   	</div>
	   	&nbsp;
	   	<div class="span1">
	    	<%= f.input :children, collection: 0..10, input_html:{:style => "width: 50px"}, selected: 0%>
	  	</div>
	</div>
  </div>
  &nbsp;
  <div class="row-fluid">
  	<%= f.input :comment, input_html:{:style => "width: 300px;height150px;"},placeholder: "Blessings, Wishes, Comments or Warnings!;) ... Drag to expand"%>
  	&nbsp;
  </div>

  <div class="row-fluid">
  	<%= f.input :present, as: :boolean, label: 'Yes, We will be there !'%>
  	&nbsp;
  </div>
  <%= f.button :submit, "RSVP", :class => 'btn btn-success rsvp_success' %>
  <%= link_to t('.cancel', :default => t("helpers.links.Sorry :(")),
                guest_lists_path, :class => 'btn rsvp_cancel' %>
<% end %>
